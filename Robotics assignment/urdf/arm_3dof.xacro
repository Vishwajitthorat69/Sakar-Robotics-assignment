<?xml version="1.0"?>
<xacro:macro name="arm_3dof" params="prefix">
  <link name="${prefix}arm_base_link">
    <visual><geometry><box size="0.12 0.12 0.03"/></geometry></visual>
  </link>
  <joint name="${prefix}joint1" type="revolute">
    <parent link="${prefix}arm_base_link"/>
    <child link="${prefix}link1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="5" velocity="1"/>
  </joint>
  <link name="${prefix}link1">
    <visual><geometry><cylinder radius="0.03" length="0.18"/></geometry></visual>
  </link>
  <joint name="${prefix}joint2" type="revolute"><parent link="${prefix}link1"/><child link="${prefix}link2"/><axis xyz="0 1 0"/></joint>
  <link name="${prefix}link2"><visual><geometry><cylinder radius="0.025" length="0.18"/></geometry></visual></link>
  <joint name="${prefix}joint3" type="revolute"><parent link="${prefix}link2"/><child link="${prefix}ee_link"/><axis xyz="0 1 0"/></joint>
  <link name="${prefix}ee_link"><visual><geometry><sphere radius="0.03"/></geometry></visual></link>
</xacro:macro>
<xacro:arm_3dof prefix=""/>
